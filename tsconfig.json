{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": ["./docs/.vitepress/theme/raw.d.ts"],
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/main.js",
    "promiseui/**/*.ts",
    "promiseui/**/*.tsx",
    "promiseui/**/*.d.ts",
    "promiseui-cli/**/*.ts",
    "promiseui/loadingBar/src/loadingBarServicetsx",
    "docs/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
